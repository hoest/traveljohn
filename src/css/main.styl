/* http://meyerweb.com/eric/tools/css/reset/
  v2.0 | 20110126
  License: none (public domain)
*/

html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline;
}
/* HTML5 display-role reset for older browsers */
article, aside, details, figcaption, figure,
footer, header, hgroup, menu, nav, section {
  display: block;
}
body {
  line-height: 1;
}
ol, ul {
  list-style: none;
}
blockquote, q {
  quotes: none;
}
blockquote:before, blockquote:after,
q:before, q:after {
  content: '';
  content: none;
}
table {
  border-collapse: collapse;
  border-spacing: 0;
}

body {
  font-family: 'Open Sans', Arial, sans-serif;
  font-size: 16px;
  color: #666;
  background-color: #f2f2f2;
  line-height: 1.7em;
  font-weight: 500;
}

a {
  color: #007b40;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

.inner-wrapper {
  max-width: 960px;
  margin-left: auto;
  margin-right: auto;
}

header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  height: 59px;
  z-index: 999;
  box-shadow: 0 0 10px 1px #000;
}

.in_admin_modus header {
  top: 32px;
}

header .inner-wrapper {
  display: flex;
  justify-content: space-between;
}

header .logo img {
  margin: 5px 2rem 0 2rem;
  display: block;
}

header ul {
  display: flex;
  justify-content: flex-end;
}

header .mobile-menu {
  display:none;
}

header ul li:hover,
header ul li.current_page_item {
  color: #fff;
  background-color: #007b40;
}

header ul li a {
  color: #666;
  display: block;
  padding: 16px;
}

header ul li:hover a,
header ul li a:hover,
header ul li.current_page_item a {
  color: #fff;
  text-decoration: none;
}

main {
  padding-top: 60px;
}

main .payoff {
  text-align: center;
  font-weight: 700;
  font-style: italic;
  color: #007b40;
}

main p {
  margin: 1em 0;
}

main h1 {
  font-family: 'Open Sans', Arial, sans-serif;
  font-size: 2em;
  color: #007b40;
  font-weight: 700;
}

main .cartoons .slide .image {
  position: relative;
  max-width: 220px;
  margin: 0 1px;
}

main .cartoons .slide .image .image-text {
  position: absolute;
  top:0;
  bottom: 0;
  left:0;
  right: 0;
  text-align: center;
  background-color: #000;
  background-color: rgba(0,0,0,0.75);
  color: #fff;
  padding: .5em;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
}

main .cartoons .slide .image:hover .image-text {
  opacity: 1;
  transition: opacity 300ms ease-in;
}

main .cartoons .slide .image img {
  display: block;
  margin: 1px;
  max-width: 220px;
}

main .content {
  font-family: 'Roboto', sans-serif;
  background-color: #fff;
}

main .content .content-inner {
  padding: 2rem;
}

.yellow-bg {
  max-height: 400px;
  background-image: url('./images/yellow-bg.png');
}

.yellow-bg .slide {
  margin: 0 auto;
  max-width: 960px;
}

.yellow-bg .slick-arrow { z-index: 99; }
.yellow-bg .slick-prev { left: 1rem; }
.yellow-bg .slick-next { right: 1rem; }
.yellow-bg .slick-dots { bottom: 0; }
.yellow-bg .slick-dotted.slick-slider {margin-bottom: 0;}

.single-page .yellow-bg {
  height: 200px;
  background-image: url('./images/yellow-bg.png');
  overflow: hidden;
  text-align: center;

  .banner {
    background-color: rgb(255,255,255);
    background-color: rgba(255,255,255, 0.75);
    height: 200px;

    img {
      max-height: 200px;
    }
  }
}

.producten {
  display: flex;
  flex-wrap: wrap;
  align-items: stretch;

  .product {
    max-width: calc(33% - 10px);
    flex-grow: 1;
    margin: 5px;
    border: 1px solid #999;
    border-radius: 3px;
    box-shadow: 3px 3px 3px 0px #cecece;

    .traveljohn_product_image {
      text-align:center;

      img {
        display: block;
        border-top-left-radius: 3px;
        border-top-right-radius: 3px;
        max-width: 100%;
        margin: 0 auto;
      }
    }

    .product-inner {
      padding: 1rem;

      .traveljohn_product_name {
        font-family: 'Open Sans', Arial, sans-serif;
        color: #007b40;
        font-weight:bold;
        font-size:1.3em;
      }

      .traveljohn_product_text {
        p {
          margin-top: 0;
        }
      }

      .traveljohn_product_extra_image {
        display: flex;
        flex-wrap: wrap;
        align-items: stretch;

        .product_extra_image_small {
          display: block;
          max-width: calc(100% / 5);

          img {
            display: block;
            max-width: 100%;
          }
        }
      }
    }
  }
}

.in_admin_modus .fancybox-controls {
  top: 32px;
}

form.wpcf7-form {
  input, textarea {
    width: 100%;
    font-size: 1em;
    line-height: 1.5;
    padding: 3px;
    border-radius: 3px;
  }
}

footer {
  font-size: .8em;
  background-color: #000;
}

footer .inner-wrapper {
  display: flex;
  justify-content: space-between;
}

footer .copy {
  margin: 16px 0;
}

footer ul {
  display: flex;
  justify-content: flex-end;
}

footer ul li {
  margin: 16px;
}

@media screen and (max-width: 782px) {
  .in_admin_modus header {
    top: 46px;
  }

  header nav {
    .menu {
      ul {
        display: none;
      }
    }

    .menu.show {
      position: absolute;
      top: 0;
      left: 0;
      right: 50px;
      bottom: 0;

      ul {
        display: block;
        background-color: #fff;
      }
    }

    .mobile-menu {
      display: block;
      position: absolute
      top: 10px;
      right: 10px;
      cursor: pointer;
    }
  }

  main .content .content-inner {
    padding: 2rem;

    iframe {
      width: 100%;
    }
  }

  .cartoons {
    display:none;
  }

  footer {
    .copy { text-align: center; }
    .inner-wrapper, ul {
      display: block;
    }
  }

  .producten {
    .product {
      max-width: calc(100% - 10px);
    }
  }
}
